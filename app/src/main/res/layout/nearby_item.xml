                    android:fontFamily="@font/semibold"
                    android:text="Float Cake ..."
                    android:textAlignment="textStart"
                    android:textColor="#091020"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:text="$6.05"
                    android:textColor="#FF6813"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="150dp"
                android:layout_marginStart="13dp"
                android:orientation="vertical">

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/food_image_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/popularfood1" />

                <TextView
                    android:id="@+id/txtFood4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Float Cake ..."
                    android:textAlignment="textStart"
                    android:textColor="#091020"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/price_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:text="$6.05"
                    android:textColor="#FF6813"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="150dp"
                android:layout_marginStart="13dp"
                android:orientation="vertical">

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/food_image_5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/popularfood1" />

                <TextView
                    android:id="@+id/txtFood5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Float Cake ..."
                    android:textAlignment="textStart"
                    android:textColor="#091020"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/price_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:text="$6.05"
                    android:textColor="#FF6813"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>